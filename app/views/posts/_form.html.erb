<div class="row">
  <div class="col-md-8">
    <%= form_for @post do |form| %>
      <div class="form-group">
        <%= form.label :documents_files %>
        <%= form.attachment_field :documents_files, multiple: true %>
      </div>

      <div class="form-group">
        <%= form.button :submit %>
      </div>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>
